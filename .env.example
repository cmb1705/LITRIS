# Literature Review Index System - Environment Variables
# Copy this file to .env and fill in your values

# Docker Compose host mounts (for docker-compose.yml only)
# ZOTERO_DB_HOST=/path/to/zotero.sqlite
# ZOTERO_STORAGE_HOST=/path/to/zotero/storage

# ============================================================
# LLM Provider API Keys (only one needed based on provider)
# ============================================================

# Anthropic API Key (for api mode with Claude)
# Leave unset to use CLI mode with Max subscription
# ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API Key (for api mode with GPT models)
# OPENAI_API_KEY=sk-...

# Google API Key (for Gemini models)
# GOOGLE_API_KEY=...

# Ollama server URL (for local LLM via Ollama)
# OLLAMA_HOST=http://localhost:11434

# llama.cpp model path (for local LLM via llama.cpp)
# LLAMACPP_MODEL_PATH=/path/to/model.gguf

# ============================================================
# Reference Source Paths
# ============================================================

# Override Zotero paths (optional - defaults in config.yaml)
# ZOTERO_DATABASE_PATH=D:/Zotero/zotero.sqlite
# ZOTERO_STORAGE_PATH=D:/Zotero/storage

# Mendeley database path (for --provider mendeley)
# MENDELEY_DB_PATH=/path/to/mendeley.sqlite

# ============================================================
# Extraction Settings
# ============================================================

# Override extraction mode (optional - defaults in config.yaml)
# EXTRACTION_MODE=cli

# Override extraction provider (anthropic, openai, google, ollama, llamacpp)
# EXTRACTION_PROVIDER=anthropic
