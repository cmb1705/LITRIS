# Literature Review Index System - Environment Variables
# Copy this file to .env and fill in your values

# Docker Compose host mounts (for docker-compose.yml only)
# ZOTERO_DB_HOST=/path/to/zotero.sqlite
# ZOTERO_STORAGE_HOST=/path/to/zotero/storage

# Anthropic API Key (only needed for batch_api mode)
# Leave unset to use CLI mode with Max subscription
# ANTHROPIC_API_KEY=sk-ant-...

# Override Zotero paths (optional - defaults in config.yaml)
# ZOTERO_DATABASE_PATH=D:/Zotero/zotero.sqlite
# ZOTERO_STORAGE_PATH=D:/Zotero/storage

# Override extraction mode (optional - defaults in config.yaml)
# EXTRACTION_MODE=cli
